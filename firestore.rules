rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own runner selections
    // Document IDs follow pattern: userId-competitionId-className-runnerName
    match /selections/{selectionId} {
      allow read: if request.auth != null 
        && (selectionId.matches('^' + request.auth.uid + '-.*') 
            || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null 
        && selectionId.matches('^' + request.auth.uid + '-.*');
    }
    
    // Allow Cloud Functions to read/write cache data
    match /cache/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
